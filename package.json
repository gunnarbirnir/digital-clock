{
  "name": "digital-clock-modules",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:app": "yarn workspace digital-clock-app run start",
    "start:component": "yarn workspace @gunnarbirnir/digital-clock run start",
    "start": "concurrently \"yarn start:app\" \"yarn start:component\"",
    "build": "yarn workspaces foreach --all -pt run build",
    "clean": "yarn workspaces foreach --all -pt run clean",
    "test:unit": "jest",
    "test:visual": "playwright test --update-snapshots",
    "lint": "eslint --config eslint.config.js",
    "type-check": "tsc --noEmit"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gunnarbirnir/digital-clock.git"
  },
  "author": "Gunnar Olafsson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gunnarbirnir/digital-clock/issues"
  },
  "homepage": "https://github.com/gunnarbirnir/digital-clock#readme",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.56.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^30.2.0",
    "rollup": "^4.53.2",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "packageManager": "yarn@4.11.0",
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
